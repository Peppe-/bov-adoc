#: chapter-charts.xml:514
#, no-c-format
msgid "PlotOptionsColumn"
msgstr ""

#. Tag: parameter
#: chapter-charts.xml:517
#, no-c-format
msgid "COLUMNRANGE"
msgstr ""

#. Tag: classname
#: chapter-charts.xml:518
#, no-c-format
msgid "PlotOptionsColumnRange"
msgstr ""

